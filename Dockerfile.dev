# Development Dockerfile for PIrateRF
FROM golang:1.24.6-alpine

# Install build dependencies
RUN apk add --no-cache \
    git \
    make \
    bash \
    gcc \
    musl-dev \
    sox \
    ffmpeg \
    imagemagick

# Set working directory
WORKDIR /app

# Copy source code
COPY . .


# Expose ports - HTTP and HTTPS
EXPOSE 8080 8443

# Default command - shows available make targets
CMD ["make", "help"]
